<h2>登録内容の変更</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="field">
  <%= f.label :写真 %><br/>
  <%= f.file_field :profile_image %>
</div>
  
  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :パスワード %> <i>(変更しない場合は空欄)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %>文字以上入力してください</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :パスワードの確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  
  <div class="field">
    <%= f.label :自己紹介 %><br />
    <%= f.text_area :self_introduction %>
  </div>

  
  <div class="field">
    <%= f.label :エリア %><br />
    <%= f.select :area, [["北海道", "北海道"], ["東北", "東北"],["関東", "関東"],["北陸", "北陸"],["東海", "東海"], ["近畿", "近畿"],["中国", "中国"],["四国", "四国"], ["九州", "九州"],["沖縄", "沖縄"]], include_blank: "選択して下さい" %>
  </div>

  
  <div class="field">
    <%= f.label :ジャンル %><br />
    <%= f.select :genre, [["漫才", "漫才"],["コント", "コント"], ["その他", "その他"] ],  include_blank: "選択してください" %>
  </div>

  
  <div class="field">
    <%= f.label :年齢 %><br />
    <%= f.select :age, [["10代", "10代"],["20代", "20代"], ["30代", "30代"],  ["40代", "40代"], ["50代", "50代"],["60代以上", "60代以上"] ],  include_blank: "選択してください" %>
  </div>

  
  <div class="field">
    <%= f.label :性別 %><br />
    <%= f.select :gender, [["男", "男"],["女", "女"], ["その他", "その他"] ],  include_blank: "選択してください" %>
  </div>

  
  <div class="field">
    <%= f.label :芸歴 %><br />
    <%= f.select :career, [["1年以下", "1年以下"],["2年", "2年"], ["3年", "3年"],["4年", "4年"],["5年以上", "5年以上"] ],  include_blank: "選択してください" %>
  </div>

  
  <div class="field">
    <%= f.label :国籍 %><br />
    <%= f.select :country, [["日本", "日本"],["海外", "海外"] ],  include_blank: "選択してください" %>
  </div>

  
  <div class="field">
    <%= f.label :所属 %><br />
    <%= f.select :organization, [["フリー", "フリー"],["吉本", "吉本"],["松竹", "松竹"],["人力車", "人力車"],["マセキ", "マセキ"],["ワタナベ", "ワタナベ"],["ホリプロコム", "ホリプロコム"], ["その他", "その他"] ],  include_blank: "選択してください" %>
  </div>
  
  <div class="actions">
    <%= f.submit "変更" %>
  </div>
<% end %>

<h3>アカウントの削除</h3>

<p> <%= button_to "アカウントの削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
